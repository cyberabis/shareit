# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/signup						controllers.Application.signupEntry()
POST	/signup						controllers.Application.signup()
GET		/login						controllers.Application.loginEntry()
POST	/login						controllers.Application.login()

GET		/share						controllers.ShareApplication.shareEntry()
POST	/share						controllers.ShareApplication.share()
GET		/viewshare					controllers.ShareApplication.viewShareEntry()
POST	/viewshare					controllers.ShareApplication.viewShare()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Map Bootstrap images
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/images/glyphicons-halflings.png")
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/images/glyphicons-halflings-white.png")
